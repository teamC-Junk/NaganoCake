<div class="container mt-5">
  <div class="col-10 mx-auto mt-5">
    <div class="row justify-content-center mb-3">
      <div class="col-4 headline">
        <h4>注文履歴詳細</h4>
      </div>
    </div>
    <div class="col-6 d-flex justify-content-center mt-5">
      <table class="table table-borderless">
        <thead>
          
        </thead>
        <tbody>
          <tr>
            <td><strong>購入者</strong></td>
            <td>
              <%= link_to admin_customer_path(@order.customer.id), class: "admin_link" do %>
                <%= @order.customer.last_name + @order.customer.first_name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td><strong>注文日</strong></td>
            <td>
              <%= @order.created_at.strftime('%Y/%m/%d') %>
            </td>
          </tr>
          <tr>
            <td><strong>配送先</strong></td>
            <td>
              〒<%= @order.post_code.to_s %>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td><strong>支払方法</strong></td>
            <td>
              <%= @order.payment_method %>
            </td>
          </tr>
          <tr>
            <td><strong>注文ステータス</strong></td>
            <td>
              <%= form_with model: @order, url: admin_order_path(@order.id), local:true, method: :patch do |order| %>
                <%= order.select :status, Order.statuses_i18n.invert %>
                <%= order.submit "更新", class: "btn btn-success btn-sm" %>
              <% end %>  
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="row mt-3">
      <div class="col-9 d-flex">
        <table class="table table-bordered border-dark table-hover align-middle custom-table">
          <thead>
            <tr class="align-center">
              <th><strong>商品名</strong></th>
              <th><strong>単価（税込）</strong></th>
              <th><strong>数量</strong></th>
              <th><strong>小計</strong></th>
              <th><strong>制作ステータス</strong></th>
            </tr>
          </thead>
          <tbody>
            <% @order_items.each do |order_item| %>
              <tr>
                <td><%= order_item.item.name %></td>
                <td>¥<%= order_item.item.with_tax_price.to_s %></td>
                <td><%= order_item.item.amount %></td>
                <td><></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
