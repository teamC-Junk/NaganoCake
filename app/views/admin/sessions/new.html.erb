<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container mt-4 mb-5">
      <h3>管理者ログイン</h3>
    </div>
    <div class="container mt-5">
        <div class="field form-group">
          <div class="row">
            <div class="col-lg-2 offset-lg-2 flex-md-fill mt-2">
              <%= f.label :メールアドレス %>
            </div>
            <div class="col-lg-7 offset-lg-1 flex-md-fill">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="field form-group">
          <div class="row">
            <div class="col-lg-2 offset-lg-2 flex-md-fill mt-2">
              <%= f.label :パスワード %>
            </div>
            <div class="col-lg-7 offset-lg-1 flex-md-fill">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

          </div>
        </div>
        <div class="field form-group">
          <div class="row">
            <div class="actions mt-5 col-lg-7 offset-lg-5">
              <%= f.submit "ログイン", class:"btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
        <% end %>

        <%= render "admin/shared/links" %>

      </div>
    </div>