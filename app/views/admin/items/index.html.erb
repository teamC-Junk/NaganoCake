<div class="container">
  <div class="row">
    <div class="col-6 mt-5 mb-3">
      <h2><strong>商品一覧</strong></h2>
    </div>
    <div class="col-6 mt-5 mb-3">
      <h2 class="text-right">
        <%= link_to new_admin_item_path do %>
          <i class="fas fa-plus-circle"></i>
        <% end %>
      </h2>
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <td><strong>商品ID</strong></td>
          <td><strong>商品名</strong></td>
          <td><strong>税抜価格</strong></td>
          <td><strong>ジャンル</strong></td>
          <td><strong>ステータス</strong></td>
        </tr>
      </thead>
      <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
            <% end %>
          </td>
          <td>¥<%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active == true %>
              <strong class="text-success"><%= "販売中" %></strong>
            <% else %>
              <strong class="text-danger"><%= "販売停止中" %></strong>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="d-flex justify-content-center mt-4">
  <%= paginate @items %>
</div>