<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container my-5">
    <h2 class="title-color text-center col-2">ログイン</h2>
  </div>
  <div class="container my-5">
    <h4 class="title-color text-center col-4">会員の方はこちらからログイン</h4>
  </div>
  <div class="container mt-5">
    <div class="field form-group">
      <div class="row">
        <div class="col-lg-2 offset-lg-2 flex-md-fill mt-2">
          <%= f.label :email, "メールアドレス" %>
        </div>
        <div class="col-lg-7 offset-lg-1 flex-md-fill">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
        </div>
      </div>
    </div>
    
    <div class="field form-group">
      <div class="row">
        <div class="col-lg-2 offset-lg-2 flex-md-fill mt-2">
          <%= f.label :password, "パスワード" %>
        </div>
        <div class="col-lg-7 offset-lg-1 flex-md-fill">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
    
      </div>
    </div>
    <div class="field form-group">
      <div class="row">
        <div class="actions mt-5 col-lg-7 offset-lg-5">
          <%= f.submit "ログイン", class:"btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
    <%= render "admin/shared/links" %>
  </div>
<% end %>
</div>

<div class="container my-5">
  <h4 class="title-color text-center col-4">会員登録がお済みでない方</h4>
</div>
<div class="container mt-5 mb-6">
  <div class="row">
    <div class="col-lg-4 offset-lg-4">
      <h6>
        <%= link_to "こちら", new_customer_registration_path %>から新規登録を行なってください。
      </h6>
    </div>
  </div>
</div>