<div class= "container">
  <div class="row">
    <div class= "col-4 my-4 ml-5 text-center">
      <h3 class= "col-8 title-color">新規会員登録</h3>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="row">
      <div class="col">
        <table class= "table table-borderless">
          <tr>
            <div class="field">
              <th><%= f.label "名前" %></th>
              <th>
                <%= f.label "(姓)", class: "mr-3" %>
                <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和", class: "mr-5" %>
                <%= f.label "(名)", class: "mr-3" %>
                <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子" %>
              </th>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :"フリガナ" %></th>
              <th>
                <%= f.label "(セイ)" %>
                <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ", class: "mr-5" %>
                <%= f.label "(メイ)" %>
                <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ" %>
              </th>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :"メールアドレス" %></th>
              <th><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "ml-5" %></th>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
              <th><%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", placeholder: "0000000", class: "ml-5" %></th>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :"住所" %></th>
              <th><%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", class: "ml-5", size: 60 %></th>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :"電話番号(ハイフンなし)" %></th>
              <th><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "0000000000", class: "ml-5" %></th>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :"パスワード（#{@minimum_password_length}文字以上）" %></th>
              <th><%= f.password_field :password, autocomplete: "new-password", class: "ml-5" %></th>
            </div>
          </tr>

          <tr>
            <div class="field">
              <th><%= f.label :"パスワード(確認用)" %></th>
              <th><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "ml-5" %></th>
            </div>
          </tr>

          <tr>
            <div class="actions">
              <th></th>
              <th><%= f.submit "新規登録", class: "btn btn-success ml-5 px-5" %></th>
            </div>
          </tr>
        </table>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class= "col-5 ml-5 text-center">
      <h3 class= "col-8 my-4 title-color">既に登録済みの方</h3>
      <p>
        <%= link_to "こちら", new_customer_session_path %> からログインしてください
      </p>
    </div>
  </div>
</div>